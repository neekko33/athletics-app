<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
<%= render "shared/card", title: "田径运动会管理系统" do %>
  <%= form_with url: session_path, class: "space-y-4" do |form| %>
    <%= form.email_field :email_address, class: "input", required: true, autofocus: true, autocomplete: "username", placeholder: "请输入您的电子邮件地址", value: params[:email_address] %><br>
    <%= form.password_field :password, class: "input", required: true, autocomplete: "current-password", placeholder: "请输入您的密码", maxlength: 72 %><br>
    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
    <%= form.submit "登录", class: "btn btn-primary" %>
  <% end %>
  <br>
  <%= link_to "忘记密码？", new_password_path, class: "hover:underline" %>
<% end %>