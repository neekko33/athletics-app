<% if athletes.any? %>
  <table class="table w-full max-w-3xl mx-auto">
    <thead>
      <tr>
        <th>#</th>
        <th>编号</th>
        <th>姓名</th>
        <th>性别</th>
        <th>班级</th>
        <th>报名项目</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% athletes.each_with_index do |athlete, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= athlete.number || '-' %></td>
          <td><%= athlete.name %></td>
          <td><%= athlete.gender %></td>
          <td><%= athlete.klass.name %></td>
          <td>
            <% if athlete.events.any? %>
              <div class="text-sm">
                <% athlete.events.each do |event| %>
                  <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full mr-1 mb-1">
                    <%= event.name %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <span class="text-gray-500 text-sm">未报名项目</span>
            <% end %>
          </td>
          <td>
            <div class="flex space-x-2">
            <%= link_to "编辑", edit_competition_athlete_path(@competition, athlete), class: "btn btn-sm" %>
            <%= button_to "删除", competition_athlete_path(@competition, athlete), 
                         method: :delete, 
                         data: { turbo_confirm: "确定要删除该运动员吗？" },
                         class: "btn btn-sm btn-error" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="text-gray-500 text-sm text-center">暂无运动员信息。</p>
<% end %>