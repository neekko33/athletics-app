<%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
<%= render "shared/card", title: "忘记密码？" do %>
  <%= form_with url: passwords_path, class: "space-y-4" do |form| %>
    <%= form.email_field :email_address, class: "input", required: true, autofocus: true, autocomplete: "username", placeholder: "请输入您的电子邮件地址", value: params[:email_address] %><br>
    <%= form.submit "发送重置密码说明", class: "btn btn-primary" %>
  <% end %>
<% end %>
